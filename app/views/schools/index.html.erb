<p id="notice"><%= notice %></p>

<h1>Schools</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Ward</th>
      <th>Address</th>
      <th>Station</th>
      <th>Day of week</th>
      <th>Teacher name</th>
      <th>Teacher profile</th>
      <th>Fee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.name %></td>
        <td><%= school.category %></td>
        <td><%= school.ward %></td>
        <td><%= school.address %></td>
        <td><%= school.station %></td>
        <td><%= school.day_of_week %></td>
        <td><%= school.teacher_name %></td>
        <td><%= school.teacher_profile %></td>
        <td><%= school.fee %></td>
        <td><%= link_to 'Show', school %></td>
        <td><%= link_to 'Edit', edit_school_path(school) %></td>
        <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

