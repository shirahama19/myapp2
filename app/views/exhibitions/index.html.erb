<p id="notice"><%= notice %></p>

<h1>Exhibitions</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Place ward</th>
      <th>Place name</th>
      <th>Place address</th>
      <th>Station</th>
      <th>First date</th>
      <th>Last date</th>
      <th>Closed date</th>
      <th>Opening time</th>
      <th>Detail text</th>
      <th>Category string</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exhibitions.each do |exhibition| %>
      <tr>
        <td><%= exhibition.name %></td>
        <td><%= exhibition.place_ward %></td>
        <td><%= exhibition.place_name %></td>
        <td><%= exhibition.place_address %></td>
        <td><%= exhibition.station %></td>
        <td><%= exhibition.first_date %></td>
        <td><%= exhibition.last_date %></td>
        <td><%= exhibition.closed_date %></td>
        <td><%= exhibition.opening_time %></td>
        <td><%= exhibition.detail_text %></td>
        <td><%= exhibition.category_string %></td>
        <td><%= link_to 'Show', exhibition %></td>
        <td><%= link_to 'Edit', edit_exhibition_path(exhibition) %></td>
        <td><%= link_to 'Destroy', exhibition, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Exhibition', new_exhibition_path %>
